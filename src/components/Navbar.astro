---
import Navlink from './Navlink.astro'

const navLinks = [
  { href: '/',          title: '🙋‍♂️ About Me' },
  // { href: '/skills/',   title: '🛠️ Skills' },
  { href: '/work/',     title: '👔 Work Experience' },
  { href: '/projects/', title: '📚 Personal Projects' },
  // { href: '/contact/',  title: '✉️ Contact' },
]
---
<style is:global>
/* Media queries with tag.class override (to not use !important) 1° */
@media (max-width: 449px) {
  nav {
    /* width: 300px; */
    padding-inline: 10px;
    /* Sticky navbar */
    position: fixed;
    left: calc(42px / 2);
    z-index: 1;
    background-color: rgba(180,180,180, 0.6) !important;
  }

  section {
    margin-top: 70px !important;
  }
}

@media (min-width: 450px) and (max-width: 1199px) {
  nav { 
    width: 400px;
  }
}

@media (min-width: 1200px) {
  nav { 
    width: 600px;
  }
}

/* Default Plain HTML tag CSS rules 2° */
nav {
  margin-inline: auto;
  background-color: rgba(180,180,180, 0.4);
  outline: 1px solid rgba(220,220,220, 0.6);
  box-shadow: 6px 6px 6px rgb(0 0 0 / 35%);
  /* GPU intensive effect not recommended in Mobile */
  /* backdrop-filter: blur(1.6px); */
  border-radius: 0 0 12px 12px;
}

@media (max-width: 449px) {
  ul.nav-links {
    column-gap: 10px;
  }
}

.nav-links {
  display: flex;
  justify-content: center;
  column-gap: 20px;
}

@media (max-width: 449px) {
  li.nav-link {
    margin-block: 5px;
    display: flex;
    padding: unset;
  }
}

.nav-link {
  margin-block: 10px;
  /* transition: transform 0.2s ease-in-out; */
  transition:
    background-color 0.4s ease,
    box-shadow 0.4s ease, 
    opacity 0.4s ease, 
    transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  padding: 3px 0;
  /* border-radius: 10px; */
}

li.nav-link:hover {
  transform: scale(1.2);
  background-color: var(--hover-bg-color);
  box-shadow: 5px 5px 7px rgb(0 0 0 / 30%);
  /* border-radius: 10px; */
  outline: 0.1px solid rgb(85 85 217 / 30%);
}

li.nav-link, li.nav-link:hover { 
  border-radius: 10px;
}
</style>

<nav>
	<ul class="nav-links">
		{ navLinks.map(link => (
      <li class="nav-link">
        <Navlink href={link.href} title={link.title} />
      </li>
    )) }
	</ul>
</nav>
