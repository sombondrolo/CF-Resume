---
const notes = [
  "Navbar: Locales language switch?",
  "Work: animate.css overlay text?",
]

const isBeingRendered = false
---
<style>
.notes-container {
  margin-bottom: 20px;
}

.viewport-link {
  display: inline-block;
  margin-left: calc(100% - 70px);
}

p.notes-text {
  color: red;
  font-size: x-small;
  text-align: end;
}
</style>

{ isBeingRendered && (
  <div class="notes-container">
    <a class="viewport-link" href="/viewport/">/viewport</a>

    { notes.map(note => 
      <p class="notes-text">{note}</p>
    )}
  </div>
)}