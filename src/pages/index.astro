<style>
.profile-and-description-col {
	display: flex;
	flex-direction: row;
	align-items: center;
	column-gap: 20px;
	padding: 20px;
}
.profile-col {
	width: 150px;
}
.profile-pic-container {
	height: 150px;
	img {
		width: 100%;
	}
}
.profiles-row {
	margin-block: 15px;
}
.row-name {
	text-decoration: underline;
	text-align: center;
	font-size: small;
}
.li-gh-icons-row, .pdf-docx-icons-row {
	width: 150px;
	display: flex;
	flex-direction: row;
	justify-content: space-evenly;

	a {
		display: flex;
		height: 30px;
		width: 30px;
		img {
			width: 100%;
		}
	}
}
.profile-pic, .icon {
	filter: drop-shadow(1px 1px 1px rgba(0, 0, 0, 0.5));
}
.description-col {
	font-size: small;
	margin-bottom: auto;
	margin-inline: auto;
	font-weight: bold;

	p {
		margin-bottom: 10px;

		&:last-child {
      margin-bottom: 0;
    }
	}
}
</style>

