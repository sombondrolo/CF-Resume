---
import Layout from '../layouts/Layout.astro'
---

<Layout title="Show Device Dimensions">
  <section>
    <h1 id="innerDimensions"></h1><p>Inner</p>
		<h1 id="outerDimensions"></h1><p>Outer</p>
  </section>
</Layout>

<!-- JS function to see device dimensions -->
<script>
  function showDeviceViewport() {
    const inner = document.getElementById('innerDimensions')
    if (inner) {
      const dimensions = `${window.innerWidth}x${window.innerHeight}`
      inner.textContent = dimensions
    }

		const outer = document.getElementById('outerDimensions')
    if (outer) {
      const dimensions = `${window.outerWidth}x${window.outerHeight}`
      outer.textContent = dimensions
    }
  }

  window.addEventListener('resize', showDeviceViewport)
  showDeviceViewport()

	// Inner HTML Document
	// Samsung S52 => 360x667
	// Mi notebook 13" => 1301x630 (Web Zoom 100%)

	// Outer Browser Window
	// Mi notebook 13" => 1366x728 (Web Zoom 100%)
	// Mi PC Chrome Private => 1333x793 (Web Zoom 100%)
</script>
